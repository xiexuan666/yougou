<view class="container">

  <!-- 轮播图 -->
  <swiper class="swiper" indicator-dots>
    <block wx:for="{{detail.pics}}" wx:key="index">
      <swiper-item>
        <image mode="aspectFill" src="{{item.pics_big}}" bindtap="handlePice"
        data-index="{{index}}"
        ></image>
      </swiper-item>
    </block>
  </swiper>

   
  <!-- 商品信息 -->
  <view class="goods">
    <view class="price">￥{{detail.goods_price}}</view>

    <view class="goods-title">
      <view class="title">
        {{detail.goods_name}}
      </view>
      <view class="collect">
        <view class="iconfont icon-shoucang"></view>
        <text>收藏</text>
      </view>
    </view>
    <view class="text">快递免运费</view>
  </view>

  <!-- 商品详情页的展示 -->
  <view class="tab">
    <view 
    class="tab-item  {{current === index ? 'active' : ''}}"
     wx:for="{{ [ '详情', '规格'] }}" 
     wx:key="index" 
     bindtap="handleTab"
    data-index="{{index}}">
      {{item}}
    </view>
  </view>


 <!-- 商品详情信息 -->
    <rich-text  
    wx:if="{{current === 0}}" 
    nodes="{{detail.goods_introduce}}"></rich-text>

    <!-- 商品规格 -->
    <view wx:if="{{current === 1}}" class="attrs">
        <view class="attr-item" 
        wx:for="{{detail.attrs}}" 
        wx:key="index"> 
            <text>{{item.attr_name}}</text>
            <text>{{item.attr_vals}}</text>
        </view>
    </view>



  <!-- 页脚按钮  固定在底部的-->
  <view class="button">
     
      <!-- 联系客服的按钮 -->
        <view class="contact">
            <button open-type="contact">打开客服会话窗口</button>
        </view>


    <view class="btn">
      <view class="iconfont icon-kefu"></view>
      <text>联系客服</text>
    </view>
    <view class="btn" bindtap="hanleCart">
      <view class="iconfont icon-gouwuche"></view>
      <text>购物车</text>
    </view>

    <view class="button-color">加入购物车</view>
    <view class="button-color">立即购买</view>

  </view>
</view>